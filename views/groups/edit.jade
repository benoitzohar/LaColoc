block groupform
    form.form-horizontal(method="post", action=action, enctype="multipart/form-data", role="form",ng-non-bindable)

        input(type="hidden", name="_csrf", value="#{csrf_token}")

        - if (!group.isNew)
          input(type="hidden", name="_method", value="PUT")

        .form-group
          label.col-sm-2.control-label(for='name') #{__("Name")}
          .col-sm-10
            input.form-control#title(type='text', name="name", value=group.name, placeholder='#{__("Enter the name")}')

        .form-group
          label.col-sm-2.control-label(for='desc') #{__("Description")}
          .col-sm-10
            textarea.form-control#desc(rows="5", name="description", placeholder='#{__("Enter the description")}')=group.description

        .form-group
          .col-sm-offset-2.col-sm-10
            button.btn.btn-primary(type='submit') #{__("Save")}