- if (req.isAuthenticated() && req.user.current_group)
  nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
    .container
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') #{__('lacoloc')}
      //
         User menu 
      .btn-group.pull-right(style='margin-left: 15px;')
        a.btn.btn-default.dropdown-toggle(data-toggle='dropdown', href='#')
          .pp.pp-small(style='background-image: url(/images/favicon.png);')
            i
          | &nbsp;#{req.user.name} 
          span.caret
        ul.dropdown-menu
          //li
          //  a(href="/users/"+req.user.id, title="#{__('Profile')}") #{__('Profile')}
          //li.divider
          li
            a(href="/logout", title="logout") Logout
      //
         group menu 
      .btn-group.pull-right
        a.btn.btn-default.dropdown-toggle(data-toggle='dropdown', href='#')
          i.icon-home
          | #{req.user.current_group.name} 
          span.caret
        ul.dropdown-menu
          li
            a(href='/groups/'+req.user.current_group.id,title="#{__('Profile')}")
              | #{__('Profile')}
          li.divider
          li
            b &nbsp; #{__('Choose a coloc')} :

          each group in req.user.groups
            li
              if (group.group.id == req.user.current_group.id)
                a(href='#')
                  i.glyphicon.glyphicon-ok 
                  | &nbsp; #{group.group.name}
              else
                a(href='/groups/'+group.group.id+'/select')
                  i 
                  | &nbsp; #{group.group.name}
          li.divider
          li
            a(href='/groups/new')
              i.glyphicon.glyphicon-plus
              | &nbsp;#{__('New coloc')}

      //
         app menu 
      .collapse.navbar-collapse
        ul.nav.navbar-nav
          li(class=isActive('/expenses') ? 'active' : '')
            a(href='/expenses')
              i.glyphicon.glyphicon-euro
              | &nbsp;#{__('Expenses')}
          li(class=isActive('/shopping') ? 'active' : '')
            a(href='/shopping')
              i.glyphicon.glyphicon-th-list
              | &nbsp;#{__('Shopping')}

